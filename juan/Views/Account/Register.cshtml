@using juan.ViewModels.Account;


@model RegisterVM
@{
   
    ViewData["Title"] = "Register";
}

<div class="breadcrumb-area bg-img" data-bg="assets/img/banner/breadcrumb-banner.jpg">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb-wrap text-center">
                    <nav aria-label="breadcrumb">
                        <h1 class="breadcrumb-title">Login-Register</h1>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Login-Register</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb area end -->
<!-- login register wrapper start -->
<div class="login-register-wrapper section-padding">
    <div class="container">
        <div class="member-area-from-wrap">
            <div class="row">
        
                <!-- Register Content Start -->
                <div class="col-lg-6">
                    <div class="login-reg-form-wrap signup-form">
                        <h2>Singup Form</h2>
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="single-input-item">
                                <input placeholder="FullName" asp-for="FullName" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div> 
                            <div class="single-input-item">
                                <input placeholder="Username" asp-for="Username" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="row">
                                <div class="single-input-item">
                                    <input placeholder="Email" asp-for="Email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="single-input-item">
                                    <input placeholder="Password" asp-for="Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="single-input-item">
                                    <input placeholder="RepeatPassword" asp-for="RepeatPassword" />
                                    <span asp-validation-for="RepeatPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="single-input-item">
                                <div class="login-reg-form-meta">
                                    <div class="remember-meta">
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" id="subnewsletter">
                                            <label class="custom-control-label" for="subnewsletter">Subscribe Our Newsletter</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="single-input-item">
                                <button type="submit" class="btn">Register</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- Register Content End -->
            </div>
        </div>
    </div>
</div>